<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/black" />

            <stroke
                android:width="@dimen/cubeBorderThickness"
                android:color="@color/cubeBorder" />
            <corners android:radius="@dimen/cubeRadius" />
            <padding
                android:left="@dimen/cubeBorderThickness"
                android:top="@dimen/cubeBorderThickness"
                android:right="@dimen/cubeBorderThickness"
                android:bottom="@dimen/cubeBorderThickness" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:color="@android:color/black"
                android:width="@dimen/cubeBorderThickness"/>
            <corners android:radius="@dimen/cubeRadius" />
            <padding
                android:left="@dimen/cubeBorderThickness"
                android:top="@dimen/cubeBorderThickness"
                android:right="@dimen/cubeBorderThickness"
                android:bottom="@dimen/cubeBorderThickness" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorPrimaryDark" />

            <stroke
                android:width="@dimen/cubeBorderThickness"
                android:color="#ffffff"/>
            <corners android:radius="@dimen/cubeRadius" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/white" />

            <stroke
                android:width="4dp"
                android:color="@color/colorPrimaryDark"/>
            <corners android:radius="@dimen/cubeRadius" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</layer-list>